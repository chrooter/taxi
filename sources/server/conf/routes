# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                       @controllers.IndexController.index(path = "")

# Map static resources from the /public folder to the /assets URL path
GET           /favicon.ico            controllers.Assets.at(path="/public", file = "favicon.ico")
GET           /assets/*file           controllers.Assets.at(path="/public/assets", file)
GET           /fonts/*file            controllers.Assets.at(path="/public/fonts", file)

############################# Authentication #######################################
POST          /api/auth/login         @controllers.auth.AuthController.authenticate
POST          /api/auth/logout        @controllers.auth.AuthController.logOut
POST          /api/auth/renew         @controllers.auth.AuthController.renew

############################# Entity routes #######################################
# User routes
GET           /api/users/me           @controllers.entities.UserController.currentUser
GET           /api/users              @controllers.entities.UserController.read
GET           /api/users/:id          @controllers.entities.UserController.getById(id: Long)
POST          /api/users              @controllers.entities.UserController.create
PUT           /api/users/:id          @controllers.entities.UserController.update(id: Long)
DELETE        /api/users/:id          @controllers.entities.UserController.delete(id: Long)
# Drivers routes
GET           /api/drivers            @controllers.entities.DriverController.read
GET           /api/drivers/:id        @controllers.entities.DriverController.getById(id: Long)
POST          /api/drivers            @controllers.entities.DriverController.create
PUT           /api/drivers/:id        @controllers.entities.DriverController.update(id: Long)
DELETE        /api/drivers/:id        @controllers.entities.DriverController.delete(id: Long)


# Every other page (should be the last route)
GET           /*path                  @controllers.IndexController.index(path)



