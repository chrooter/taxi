<div class="editor user-editor">
    <form class="form-horizontal">
	  {{#property-row title="Дата штрафа" errors=errors.fineDate}}
        {{bootstrap-datepicker
        class="form-control"
        value=fineDate
        autoclose=true
        clearBtn=true
        format="dd-mm-yyyy"
        language="ru"
        weekStart=1
        }}
      {{/property-row}}
      {{property-row title="Сумма, р" value=cost errors=errors.cost}}
      {{#property-row title="Аренда" errors=errors.rent}}
        {{ember-selectize
        content=rentItems
        optionValuePath="content.id"
        optionLabelPath="content.displayName"
        selection=rent
        placeholder="Выберите аренду"
        loading=rent.isPending
        }}
      {{/property-row}}
      {{property-row title="Описание" value=description errors=errors.description}}
    </form>
  {{save-cancel}}
</div>
