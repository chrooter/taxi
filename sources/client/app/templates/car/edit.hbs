<div class="editor user-editor">
    <form class="form-horizontal">
      {{#property-row title="Номерной знак" errors=errors.regNumber}}
        {{input value=regNumber readonly="true"}}
      {{/property-row}}
      {{#property-row title="Марка" errors=errors.make}}
        {{input value=make readonly="true"}}
      {{/property-row}}
      {{#property-row title="Модель" errors=errors.carModel}}
        {{input value=carModel readonly="true"}}
      {{/property-row}}
      {{property-row title="Пробег, км" value=mileage errors=errors.mileage}}
      {{property-row title="Следующий ТО, км" value=service errors=errors.service}}
      {{#property-row title="Класс" errors=errors.carClass}}
        {{ember-selectize
        content=carClassItems
        optionValuePath="content.id"
        optionLabelPath="content.name"
        selection=carClass
        placeholder="Выберите класс"
        loading=carClass.isPending
        }}
      {{/property-row}}
      {{property-row title="Примечания" value=comment errors=errors.comment}}
    </form>
  {{save-cancel}}
</div>
