<div class="form-group">
    <label class="col-sm-2 control-label">{{title}}</label>
    <div class="col-sm-10">
      {{#if template}}
        {{yield}}
      {{else}}
        {{input value=value}}
      {{/if}}
      <div class="error-box col-sm-10">
        {{#each error in errors}}
            <div class="error">
              {{error.message}}
            </div>
        {{/each}}
      </div>
    </div>
</div>

