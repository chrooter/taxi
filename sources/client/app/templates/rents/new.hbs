<div class="editor user-editor">
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Статус</label>
            <div class="col-sm-10">
              {{ember-selectize
              content=statuses
              optionValuePath="content.id"
              optionLabelPath="content.label"
              selection=selectedStatus
              placeholder="Выберите статус"
              }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Водитель</label>
            <div class="col-sm-10">
              {{ember-selectize
              content=driverItems
              optionValuePath="content.id"
              optionLabelPath="content.displayName"
              selection=driver
              placeholder="Выберите водителя"
              loading=driver.isPending
              }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Автомобиль</label>
            <div class="col-sm-10">
              {{ember-selectize
              content=carItems
              optionValuePath="content.id"
              optionLabelPath="content.displayName"
              selection=car
              placeholder="Выберите автомобиль"
              loading=car.isPending
              }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Залог</label>
            <div class="col-sm-10">
              {{input value=deposit type="number" class="form-control" required="true"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Примечания</label>
            <div class="col-sm-10">
              {{input value=comment class="form-control"}}
            </div>
        </div>
    </form>
    <div class="commands-panel btn-group pull-right" role="group">
        <button type="button" class="btn btn-primary" {{action "save"}} {{bind-attr disabled=hasErrors}}>
            <i class="fa fa-floppy-o"></i> Сохранить
        </button>
        <button type="button" class="btn btn-default" {{action "cancel"}}>
            <i class="fa fa-times"></i> Отмена
        </button>
    </div>
</div>
