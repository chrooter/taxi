<div class="list">
    <div class="list-filter">
        <a class="btn btn-primary filter-button" data-toggle="collapse" href="#filter" aria-expanded="false" aria-controls="filter">
            Фильтр
        </a>
        <div class="collapse filter-body" id="filter">
            <div class="well">
                <form class="form-horizontal">
                  {{property-row title="Машина" value=filter.car}}
                  {{property-row title="Водитель" value=filter.driver}}
                  {{property-row title="Дата" value=filter.date}}
                </form>
                <button type="button" class="btn btn-primary" {{action "filterTable"}}>
                    <i class="fa fa-user-plus"></i> Фильтровать
                </button>
                <button type="button" class="btn btn-primary" {{action "clearFilter"}}>
                    <i class="fa fa-user-plus"></i> Очистить фильтр
                </button>
            </div>
        </div>
    </div>
    <div class="table">
      {{table-component
      columns=columns
      content=data
      hasFooter=false
      selection=selectedRow}}
    </div>
    <div class="commands-panel btn-group pull-right" role="group">
        <button type="button" class="btn btn-primary" {{action "createRent"}}>
            <i class="fa fa-user-plus"></i> Создать аренду
        </button>
        <button type="button" class="btn btn-primary" {{action "createPaymentOperation"}}  {{bind-attr disabled=selectionRentIsEmpty}}>
            <i class="fa fa-rub"></i> Создать платеж
        </button>
        <button type="button" class="btn btn-primary" {{action "createChargeOperation"}} {{bind-attr disabled=selectionRentIsEmpty}}>
            <i class="fa fa-taxi"></i> Создать списание
        </button>
        <button type="button" class="btn btn-primary" {{action "gotoHistory"}} {{bind-attr disabled=selectionRentIsEmpty}}>
            <i class="fa fa-rub"></i> Просмотр истории по аренде
        </button>
    </div>
</div>