<div class="editor user-editor">
    <form class="form-horizontal">
        {{#property-row title="Аренда"}}
          {{input value=rent.displayName readonly="true"}}
        {{/property-row}}
      {{#property-row title="Дата платежа" errors=errors.changeTime}}
        {{bootstrap-datepicker
        class="form-control"
        value=changeTime
        autoclose=true
        clearBtn=true
        format="dd-mm-yyyy"
        language="ru"
        weekStart=1
        }}
      {{/property-row}}
      {{property-row title="Сумма, р" value=amount errors=errors.amount}}
      {{#property-row title="Явка" errors=errors.presence inputCssWidth="col-sm-1"}}
        {{input type="checkbox" checked=presence class="app-check-box"}}
      {{/property-row}}
      {{property-row title="Примечания" value=comment}}
    </form>
  {{save-cancel}}
</div>