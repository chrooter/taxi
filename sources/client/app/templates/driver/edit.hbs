<div class="editor user-editor">
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">ФИО</label>
            <div class="col-sm-10">
              {{input value=fio class="form-control" required="true" readonly="true"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Паспорт</label>
            <div class="col-sm-10">
              {{input value=pass class="form-control" required="true"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Водительские права</label>
            <div class="col-sm-10">
              {{input value=license class="form-control" required="true"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Телефон</label>
            <div class="col-sm-10">
              {{input value=phone type="tel" class="form-control" required="true"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Дополнительный телефон</label>
            <div class="col-sm-10">
              {{input value=secPhone type="tel" class="form-control" required="true"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Адрес</label>
            <div class="col-sm-10">
              {{input value=address class="form-control" required="true"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Примечания</label>
            <div class="col-sm-10">
              {{input value=comment class="form-control"}}
            </div>
        </div>
    </form>
    <div class="commands-panel btn-group pull-right" role="group">
        <button type="button" class="btn btn-primary" {{action "save"}} {{bind-attr disabled=hasErrors}}>
            <i class="fa fa-floppy-o"></i> Сохранить
        </button>
        <button type="button" class="btn btn-default" {{action "cancel"}}>
            <i class="fa fa-times"></i> Отмена
        </button>
    </div>
</div>
