<div class="list">

    <div class="list-filter">
      <a class="btn btn-primary filter-button" data-toggle="collapse" href="#filter" aria-expanded="false" aria-controls="filter">
          Фильтр
      </a>
      <div class="collapse filter-body" id="filter">
          <div class="well">
              <form class="form-horizontal">
                {{property-row title="Логин" value=filterLogin}}
                {{property-row title="Фамилия" value=filterLastName}}
                {{property-row title="Имя" value=filterFirstName}}
                {{property-row title="Отчество" value=filterMiddleName}}
                {{#property-row title="Роль" errors=errors.role}}
                  {{ember-selectize
                  content=allRoles
                  optionValuePath="content.id"
                  optionLabelPath="content.label"
                  selection=filterRole
                  placeholder="Роль"
                  }}
                {{/property-row}}
              </form>
              <button type="button" class="btn btn-primary" {{action "filterTable"}}>
                  <i class="fa fa-user-plus"></i> Фильтровать
              </button>
              <button type="button" class="btn btn-primary" {{action "clearFilter"}}>
                  <i class="fa fa-user-plus"></i> Очистить фильтр
              </button>
          </div>
      </div>
    </div>

    <div class="table">
      {{table-component
      columns=columns
      content=users
      hasFooter=false
      selection=selectedRow}}
    </div>

   <div class="commands-panel btn-group pull-right" role="group" data-spy="affix">
       <button type="button" class="btn btn-primary" {{action "create"}}>
           <i class="fa fa-user-plus"></i> Создать
       </button>
       <button type="button" class="btn btn-primary" {{action "edit"}} {{bind-attr disabled=selectionEmpty}}>
           <i class="fa fa-pencil"></i> Редактировать
       </button>
       <button type="button" class="btn btn-primary" {{action "remove"}} {{bind-attr disabled=selectionEmpty}}>
           <i class="fa fa-user-times"></i> Удалить
       </button>
   </div>

</div>
